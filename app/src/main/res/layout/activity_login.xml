<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF6F8"
    tools:context=".login">

    <EditText
        android:id="@+id/edt_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape"
        android:drawablePadding="10dp"
        android:hint="نام کاربری"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape"
        android:drawablePadding="10dp"
        android:hint="رمز عبور"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintHorizontal_bias="1.0"
        mask:layout_constraintEnd_toEndOf="parent"
        mask:layout_constraintStart_toStartOf="parent"
        mask:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/chk_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:buttonTint="@color/colorPrimaryDark"
        android:checked="true"
        android:text="مرا به خاطر بسپار"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_pass" />

    <ru.katso.livebutton.LiveButton xmlns:livebutton="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btn_save"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="ثبت درخواست"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        livebutton:backgroundColor="#FFCB2F02"
        livebutton:corners="20dp"
        livebutton:layout_constraintEnd_toEndOf="parent"
        livebutton:layout_constraintHorizontal_bias="0.589"
        livebutton:layout_constraintStart_toStartOf="parent"
        livebutton:layout_constraintTop_toBottomOf="@+id/chk_save"
        livebutton:normalHeight="6dp"
        livebutton:pressedHeight="2dp"
        livebutton:shadowColor="#b16262" />

    <ru.katso.livebutton.LiveButton xmlns:livebutton="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btn_pass"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="ثبت درخواست"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        livebutton:backgroundColor="#FFCB2F02"
        livebutton:corners="20dp"
        livebutton:layout_constraintEnd_toEndOf="parent"
        livebutton:layout_constraintHorizontal_bias="0.589"
        livebutton:layout_constraintStart_toStartOf="parent"
        livebutton:layout_constraintTop_toBottomOf="@+id/btn_save"
        livebutton:normalHeight="6dp"
        livebutton:pressedHeight="2dp"
        livebutton:shadowColor="#b16262" />

</android.support.constraint.ConstraintLayout>